<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="itemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="PosterViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="VipPosterViewStyle" parent="PosterViewStyle">
        <item name="android:layout_width">@dimen/poster_workspace_item_width1</item>
        <item name="android:layout_height">@dimen/poster_workspace_item_height3</item>

        <item name="android:layout_marginLeft">@dimen/poster_workspace_item</item>
    </style>

    <style name="MainPosterViewStyle" parent="PosterViewStyle">
        <item name="android:layout_width">@dimen/poster_workspace_item_width1</item>
        <item name="android:layout_height">@dimen/poster_workspace_item_height1</item>

        <item name="android:layout_marginLeft">@dimen/poster_workspace_item</item>
    </style>

</resources>
